<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.thecop.tools.statesfromdrawio.visual.ReadCreateWriter">
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextField promptText="file.xml" HBox.hgrow="ALWAYS" fx:id="xmlFiled"/>
        <Button mnemonicParsing="false" onAction="#chooseXml" text="Choose">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
    </HBox>
    <Button mnemonicParsing="false" onAction="#read" text="Read"/>
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextField fx:id="folderField" promptText="folder" HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#chooseFolder" text="Choose">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <TextField fx:id="packageField" promptText="package" text="com.example.statemachine" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Button disable="true" mnemonicParsing="false" onAction="#write" text="Write" fx:id="writeButton"/>
</VBox>
